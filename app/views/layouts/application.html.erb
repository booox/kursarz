<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Kursarz</title>
  <%= stylesheet_link_tag    'bootstrap', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'kursarz', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'kursarz', 'data-turbolinks-track' => true %>

  <script>
    $( document ).ready(function() {
        var myCodeMirror = CodeMirror(document.body, {
          lineNumbers: true
        });
    });
  </script>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <!-- We use the fluid option here to avoid overriding the fixed width of a normal container within the narrow content columns. -->
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-6">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Kursarzyk</a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-6">
        <ul class="nav navbar-nav navbar-right">
          <% if current_user.logged_in? %>
            <!-- needs refactor; empty links insteaf of reasonable css -->
            <li><%= link_to current_user.name  %></li> 
            <li><%= link_to image_tag("github_32.png") if session[:provider] == "github"  %></li>
            <li><%= link_to image_tag("bitbucket_32.png") if session[:provider] == "bitbucket"  %></li>
            <!-- end of things to change -->
            <li><%= link_to "Logout", logout_path %></li>
          <% else %>
            <li><%= link_to "Sign in with" %></li>
            <li><%= link_to image_tag("github_32.png"), "/auth/github", :width => 30 %></li>
            <li><%= link_to image_tag("bitbucket_32.png"), "/auth/bitbucket" %></li>
            <li><%= params[:provider] %></li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
  </nav>

  <%= yield %>
</body>
</html>
