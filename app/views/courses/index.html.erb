<% if policy(Course.new).create? %>
<div class="admin-panel">
  <a href="<%= new_course_path %>" role="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Create new course</a>
</div>
<% end %>

<div class="row">
<% @courses.each do |course| %>
  <div class="col-sm-6 col-md-4 col-lg-3">
    <a href="<%= course_path(course.url) %>" class="thumbnail">
      <img src="<%= raw course.screenshot_url %>" alt="<%= course.name %>">
      <div class="caption">
        <h3><%= course.name %></h3>
        <p><%= course.short_description %></p>
      </div>
    </a>
  </div>
<% end %>
</div>
