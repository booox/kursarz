<h1><%= @course.name %></h1>

<%= render_markdown(@course.description) %>

<table>
  <% @lessons.each do |lesson| %>
    <tr>
      <td><%= link_to lesson.name, course_lesson_path(@course, lesson) %></td>
    </tr>
    <tr>
      <td><%= image_tag lesson.screenshot_url, :width => 64, :height => 64 %></td>
    </tr>
    <tr>
      <td><%= render_markdown(lesson.description) %></td>
    </tr>
  <% end %>
</table>

<table>
  <% @assignments.each do |assignment| %>
    <tr>
      <td><%= assignment.name %></td>
    </tr>
    <tr>
      <td><%= image_tag assignment.screenshot_url, :width => 64, :height => 64 %></td>
    </tr>
    <tr>
      <td><%= render_markdown(assignment.short_description) %></td>
    </tr>
  <% end %>
</table>

<% if policy(Lesson.new).create? %>
  <%= link_to "Add new lesson", new_course_lesson_path(@course.id) %>
<% end %>
<% if policy(Assignment.new).create? %>
  <%= link_to "Add new assignment", new_course_assignment_path(@course.id) %>
<% end %>
<%= link_to "Back to courses", courses_path %>
