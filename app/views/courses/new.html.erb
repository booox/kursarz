Create new course

<%= form_for @course, role: 'form' do |f| %>
 <div class="form_group" >
    <%= f.label :name %>
    <%= f.text_field :name %>
 </div>
 <div class="form_group" >
    <%= f.label :short_description %>
    <%= f.text_field :short_description %>
  </div>
   <div class="form_group" >
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="form_group">
    <%= f.submit %>
  </div>
<% end %>
